<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_rect4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:weightSum="1"
            android:background="@drawable/round_rect3"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/player_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight=".3"
                android:text="12 سنة"
                android:textColor="#fff" />

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/player_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight=".7"
                android:gravity="right"
                android:text="عبدالرحمن علي"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/player_image"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="4dp"
                    android:padding="1dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/round_rect7"
                    android:scaleType="fitXY"
                    android:src="@drawable/msalah" />

                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/player_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    app:srb_isIndicator="true"
                    app:srb_borderColor="#f4d35f"
                    app:srb_fillColor="#f4d35f"
                    app:srb_numberOfStars="5"
                    app:srb_rating="0"
                    app:srb_starBackgroundColor="#7d7d7d"
                    app:srb_starBorderWidth="0.5"
                    app:srb_starSize="12dp"
                    app:srb_starsSeparation="0dp"
                    app:srb_stepSize="0.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="147dp"
                android:layout_marginLeft="2dp"
                android:layout_weight=".6"
                android:layout_marginRight="2dp"
                android:gravity="right"
                android:orientation="vertical"
                android:textAppearance="?android:textAppearanceSmall">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sport"
                        android:textSize="12dp"

                        android:textColor="@color/applicationColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:text="الرياضة" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight=".5"
                        android:textSize="12dp"
                        android:text="الرياضة:"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/applicationColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/position"
                        android:textSize="12dp"

                        android:textColor="@color/applicationColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="الرياضة"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:textSize="12dp"

                        android:id="@+id/textPosition"
                        android:layout_width="wrap_content"
                        android:textColor="@color/applicationColor"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="المركز:"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/club"
                        android:textSize="12dp"

                        android:layout_width="wrap_content"
                        android:textColor="@color/applicationColor"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="الرياضة"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:textSize="12dp"

                        android:layout_width="wrap_content"
                        android:textColor="@color/applicationColor"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="النادي:"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="12dp"

                        android:id="@+id/videos"
                        android:textColor="@color/applicationColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="الرياضة"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/applicationColor"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="الفيديوهات:"
                        android:textSize="12dp"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/images"
                        android:textColor="@color/applicationColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12dp"

                        android:text="الرياضة"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/applicationColor"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="12dp"

                        android:gravity="left"
                        android:text="الصور:"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gover"
                        android:textColor="@color/applicationColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="الرياضة"
                        android:textSize="12dp"

                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:textColor="@color/applicationColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textSize="12dp"

                        android:text="المحافظة:"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/round_rect5"
            android:gravity="center"
            android:text="@string/your_string_here"
            android:textColor="@color/applicationColor" />
    </LinearLayout>

</RelativeLayout>