<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eg.typicaldesign.moaheb.views.RegisterForSponsor">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolabar_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/applicationColor"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:contentInsetStartWithNavigation="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:paddingLeft="50dp"
                android:src="@drawable/logo" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolabar_holder"
        android:layout_gravity="center"
        android:background="@drawable/msalah"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/register_sponsor_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />


        <LinearLayout
            android:layout_weight=".89"
            android:id="@+id/contentpain"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/round_rect"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="288dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="الاسم بالكامل"
                    android:inputType="text"
                    android:padding="8dp"
                    android:paddingRight="2dp"
                    android:textColor="#403d3d"
                    android:textColorHint="#403d3d"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:padding="2dp"
                    android:src="@drawable/user" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/round_rect"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="288dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="right|center"
                    android:hint="كلمة السر"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:paddingRight="2dp"
                    android:textColor="#403d3d"
                    android:textColorHint="#403d3d"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:padding="2dp"
                    android:src="@drawable/password" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/round_rect"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="288dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="رقم الموبيل"
                    android:inputType="number"
                    android:padding="8dp"
                    android:paddingRight="2dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#403d3d"
                    android:textColorHint="#403d3d"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:padding="2dp"
                    android:src="@drawable/smartphone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/round_rect"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="288dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="البريد الالكتروني"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:paddingRight="2dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#403d3d"
                    android:textColorHint="#403d3d"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/message2" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_image"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/round_rect"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/image"
                    android:layout_width="255dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="right|center"
                    android:hint="اختر الصورة"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:paddingRight="2dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#403d3d"
                    android:textColorHint="#403d3d"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/image2" />


            </LinearLayout>

            <LinearLayout
            android:id="@+id/linear_Governorate"
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/round_rect"
            android:orientation="horizontal">

            <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@drawable/arrow_down" />

            <TextView
            android:id="@+id/select_Governorate"
            android:layout_width="264dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:hint="اختر المحافظة"
            android:padding="8dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#403d3d"
            android:textColorHint="#403d3d"
            android:textSize="13sp" />

            <ImageView
            android:layout_gravity="center"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#fff"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:src="@drawable/location3" />

            </LinearLayout>

            <LinearLayout
            android:id="@+id/linear_country"
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/round_rect"
            android:orientation="horizontal">

            <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@drawable/arrow_down" />

            <TextView
            android:id="@+id/select_city"
            android:layout_width="264dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:hint="اختر المدينة"
            android:padding="8dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#403d3d"
            android:textColorHint="#403d3d"
            android:textSize="13sp" />

            <ImageView
            android:layout_gravity="center"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#fff"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:src="@drawable/flag1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_location"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/round_rect"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="288dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="العنوان"
                    android:padding="8dp"
                    android:paddingRight="2dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#403d3d"
                    android:textColorHint="#403d3d"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/location4" />


            </LinearLayout>


            <TextView
                android:id="@+id/read_terms"

                android:onClick="readTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:textSize="17dp"
                android:text="قراءة الشروط والاحكام"
                android:textColor="@color/applicationColor" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:background="@color/applicationColor"
                android:text="تسجيل بياناتك"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#fff" />

        </LinearLayout>
        <!--<com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/adView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginBottom="3dp"-->
            <!--ads:adSize="BANNER"-->
            <!--ads:adUnitId="ca-app-pub-8408797241053494/7420682495" />-->

        <include
            android:visibility="gone"
            android:layout_weight=".12"
            android:id="@+id/navigation1"
            layout="@layout/bottom_navigation1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom" />

    </LinearLayout>

</RelativeLayout>
