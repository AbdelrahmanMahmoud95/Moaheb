<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/msalah"
    tools:context="com.eg.typicaldesign.moaheb.views.PrivacyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">
        <TextView
            android:padding="6dp"
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect"
            android:textColor="@color/applicationColor" />
    </ScrollView>

    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/skip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/arrow_image"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="6dp"
        android:layout_toStartOf="@+id/arrow_image"
        android:text="Skip"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="18dp" />

</RelativeLayout>
