<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eg.typicaldesign.moaheb.views.SportTypeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolabar_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/applicationColor"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:contentInsetStartWithNavigation="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:paddingLeft="50dp"
                android:src="@drawable/logo" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolabar_holder"
        android:background="@drawable/msalah"
        android:weightSum="1">

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/linear_left"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolabar_holder"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight=".5"
            android:background="@drawable/circle"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/one_player" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:text="العاب فردية"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/applicationColor"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_right"

            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolabar_holder"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/linear_left"
            android:layout_weight=".5"
            android:background="@drawable/circle"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/multi_player" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="العاب جماعية"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/applicationColor"
                android:textSize="19sp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>